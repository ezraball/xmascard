<%= simple_form_for @card, :html => { :class => 'form-horizontal', :multipart => true } do |f| %>
  <%= f.input :name %>
  <%= f.input :year_list %>
  <%= f.input :tag_list %>
  <%= f.input :address %>
  <%= f.input :message %>
  <%= f.input :frontimg, :as => :file %>
  <%= f.input :backimg, :as => :file %>
  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                cards_path, :class => 'btn' %>
  </div>
<% end %>
