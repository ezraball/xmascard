<div class="container-fluid">
	<div class="row">
		<div class="span6">
			<%= simple_form_for @card, :html => { :class => 'form-horizontal', :style => "width:100%;", :multipart => true } do |f| %>
			  <%= f.input :name %>
			  <%= f.input :year_list %>
			  <%= f.input :tag_list %>
			  <%= f.input :address %>
			  <%= f.input :message %>
			  <%= f.input :frontimg, :as => :file %>
			  <%= f.input :backimg, :as => :file %>
			  <div class="form-actions">
			    <%= f.button :submit, :class => 'btn-primary' %>
			    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
			                cards_path, :class => 'btn' %>
			  </div>
			<% end %>
		</div>
		
		<div class="span6">
			<div class="clearfix">
				<br>
			</div>
		    <%= image_tag @card.frontimg.url(:full) %>
			<hr>
		    <%= image_tag @card.backimg.url(:full) %>
		</div>
	</div>
</div>