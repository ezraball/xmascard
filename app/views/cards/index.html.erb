<%- model_class = Card -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
</div>

<%= render :partial => 'pagination' %>

<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:name) %></th>
	  <th>Front</th>
	  <th>Tags</th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @cards.each do |card| %>
      <tr>
        <td>
			<%= link_to card.name, card %>
		</td>
		<td>
        	<%= link_to(image_tag(card.frontimg.url(:thumb)), card) %>
		</td>
		<td>
			Years: <%= linked_tag_list(card.year_list) %><br>
			Tags: <%= linked_tag_list(card.tag_list) %>
		</td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_card_path(card), :class => 'btn btn-large btn-primary', :style => "margin-right:15px;" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= render :partial => 'pagination' %>


<%= link_to t('.new', :default => t("helpers.links.new")),
            new_card_path,
            :class => 'btn btn-primary' %>
